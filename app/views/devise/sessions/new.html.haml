
%div{ :class=>'form-signin' }
  %h2{:class=>'form-signin-heading'} Sign in
  = form_for(resource, :as => resource_name, :url => session_path(resource_name, :html=>{ :class=>'form-signin'})) do |f|
    %div
      = f.label :email
      %br/
      = f.email_field :email, :autofocus => true, :class=>'input-block-level'
    %div
      = f.label :password
      %br/
      = f.password_field :password, :class=>'input-block-level'
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me
    %div= f.submit "Ingresar", :class=>"btn btn-large btn-primary"
  = render "devise/shared/links"
