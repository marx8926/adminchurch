
%div{ :class=> 'form-signin'}
  %h2 Sign up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      = f.label :email
      %br/
      = f.email_field :email, :autofocus => true, :class=>'input-block-level'
    %div
      = f.label :password
      %br/
      = f.password_field :password, :class=>'input-block-level'
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, :class=>'input-block-level'
    %div= f.submit "Sign up", :class=>"btn btn-large btn-primary"
  = render "devise/shared/links"
